// prettier-ignore
{
	"exclude": [
		"node_modules",
		"dist"
	],
	"compilerOptions": {
		"skipLibCheck": true,
		"target": "es6",
		"module": "es6",
		"lib": [
			"es6",
			"dom"
		],
		"jsx": "react",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDirs": [
			"./src",
			"./stories"
		],
		"allowJs": true,
		"baseUrl": "./",
		"paths": {
			"@react-components/components": [
				"./packages/components/src"
			],
			"@react-components/components/*": [
				"./packages/components/src/*"
			]
		},
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
	}
}