{
 "name": "web-react-components",
 "version": "0.1.0",
 "main": "dist/index.js",
 "license": "MIT",
 "author": "Levy Mateus Macedo",
 "description": "Web React components package",
 "repository": {
  "type": "git",
  "url": "https://github.com/levymateus/web-react-components"
 },
 "scripts": {
  "start": "start-storybook -p 8080",
  "test": "yarn jest",
  "test:watch": "yarn jest --watchAll",
  "coverage": "jest --coverage",
  "build": "lerna exec --parallel -- babel --root-mode upward src -d lib --ignore **/*.stories.js,**/*.spec.js",
  "commit": "cz"
 },
 "devDependencies": {
  "@babel/plugin-transform-runtime": "^7.12.15",
  "@emotion/css": "^11.1.3",
  "@emotion/react": "^11.1.4",
  "@emotion/styled": "^11.0.0",
  "@storybook/addon-controls": "^6.1.17",
  "@storybook/addon-docs": "^6.1.17",
  "@storybook/addon-essentials": "^6.1.17",
  "@storybook/preset-create-react-app": "^3.1.5",
  "@storybook/react": "^6.1.17",
  "@testing-library/jest-dom": "^5.11.9",
  "@testing-library/react": "^11.2.5",
  "@types/jest": "^26.0.20",
  "@types/react": "^17.0.1",
  "@types/react-dom": "^17.0.0",
  "babel-jest": "^26.6.3",
  "commitizen": "^4.2.3",
  "cz-conventional-changelog": "3.3.0",
  "date-fns": "^2.16.1",
  "husky": "^4.3.8",
  "jest": "^26.6.3",
  "jest-haste-map": "^26.6.2",
  "jest-resolve": "^26.6.2",
  "lerna": "^3.22.1",
  "lint-staged": "^10.5.4",
  "react": "^17.0.1",
  "react-docgen-typescript-loader": "^3.7.2",
  "react-dom": "^17.0.1",
  "react-icons": "^4.1.0",
  "react-test-renderer": "^17.0.1",
  "ts-jest": "^26.5.0",
  "ts-loader": "^8.0.15",
  "tsconfig-paths-webpack-plugin": "^3.3.0",
  "typescript": "^4.0.3"
 },
 "config": {
  "commitizen": {
   "path": "./node_modules/cz-conventional-changelog"
  }
 },
 "husky": {
  "hooks": {
   "pre-commit": "lint-staged",
   "pre-push": "yarn test"
  }
 },
 "lint-staged": {
  "packages/**/*.{ts,tsx}": [
   "yarn lint --fix"
  ]
 }
}
